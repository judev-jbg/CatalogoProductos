<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para precios -->
    <style name="TextAppearance.App.Price" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/helvetica_bold</item>
        <item name="android:fontFamily">@font/helvetica_bold</item>
        <item name="android:textColor">@color/price_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Estilo para descripciones -->
    <style name="TextAppearance.App.Description" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/helvetica_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Estilo para referencias/códigos -->
    <style name="TextAppearance.App.Reference" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/fragment_mono_regular</item>
        <item name="android:fontFamily">@font/fragment_mono_regular</item>
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Estilo para familia -->
    <style name="TextAppearance.App.Familia" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/helvetica_italic</item>
        <item name="android:textSize">14sp</item>d
    </style>

    <!-- Estilo para estado Activo-->
    <style name="TextAppearance.App.Estado" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/helvetica_light</item>
    </style>

    <!-- Estilo para Car-->
    <style name="TextAppearance.App.Card" parent="TextAppearance.MaterialComponents.Caption">
        <item name="cardBackgroundColor">@color/color_card</item>
    </style>


    <!-- Estilo para ultima actualizacion -->
    <style name="TextAppearance.App.UltimaActualizacion" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_bar_actualizacion</item>
        <item name="android:background">@color/background_bar_actualizacion</item>
        <item name="fontFamily">@font/fragment_mono_regular</item>
    </style>

    <string name="search_description">Buscar productos</string>
    <string name="search_icon_description">Icono de búsqueda</string>
    <string name="clear_search_description">Limpiar búsqueda</string>
    <string name="sync_description">Sincronizar datos</string>

</resources>